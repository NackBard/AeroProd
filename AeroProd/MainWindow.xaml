<Window x:Class="AeroProd.MainWindow" Background=" #DBE5F3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AeroProd"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" WindowState="Maximized" MinWidth="1920" MinHeight="1080">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="126*"/>
            <RowDefinition Height="848*"/>
            <RowDefinition Height="71*"/>
        </Grid.RowDefinitions>
        <Rectangle  Fill="#AFC1F0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stroke="Black" Grid.Row="2"/>
        <Rectangle Fill="#AFC1F0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Stroke="Black" Grid.Row="0"/>
        <TextBlock x:Name="Logo" HorizontalAlignment="Stretch" Text="Авторизация" VerticalAlignment="Top"  FontSize="72" TextAlignment="Center" FontFamily="/AeroProd;component/Fonts/#Marmelad" Height="86"/>
        <Frame x:Name="MainFrame" Content="Frame"  NavigationUIVisibility="Hidden" Source="AuthPage.xaml" Grid.Row="1"/>
    </Grid>
</Window>
